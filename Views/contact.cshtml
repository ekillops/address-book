<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="../Content/css/styles.css">
    <meta charset="utf-8">
    <title>AddressBook</title>
  </head>
  <body>
    <div class="container">
      <div class="page-header">
        <h1>Address Book</h1>
      </div>
      <h4>@Model["contact"].GetFirstName() @Model.GetLastName()</h4>
      <p>
        <span class="contact-label">Phone Number</span><br>
        @Model["contact"].GetPhoneNumber()<br>
      </p>
      <p>
        <span class="contact-label">Address:</span><br>
        @Model["address"].GetStreetAddress()<br>
        @Model["address"].GetCity()<br>
        @Model["address"].GetState()<br>
        @Model["address"].GetZipCode()
      </p>
      <div class="bottom-line">
      </div>
      <p><a href="/">Home</a> <a href="/contacts/new">Add Contact</a> <a href="/contacts/all">All Contacts</a></p>
    </div>
  </body>
</html>
